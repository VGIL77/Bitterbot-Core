{
  "name": "bitterbot-admin",
  "version": 2,
  "framework": "nextjs",
  "buildCommand": "cd admin_console && npm run build",
  "outputDirectory": "admin_console/.next",
  "installCommand": "cd admin_console && npm install",
  
  "env": {
    "NEXT_PUBLIC_API_URL": "@railway_api_url",
    "NEXT_PUBLIC_WS_URL": "@railway_ws_url",
    "NEXT_PUBLIC_ENABLE_ENGRAM": "true",
    "NEXT_PUBLIC_ENABLE_P2P": "false",
    "NEXT_PUBLIC_ENABLE_FL": "false"
  },
  
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://$RAILWAY_API_URL/api/:path*"
    },
    {
      "source": "/ws/:path*", 
      "destination": "https://$RAILWAY_WS_URL/ws/:path*"
    }
  ],
  
  "headers": [
    {
      "source": "/modules/engram/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ],
  
  "functions": {
    "admin_console/pages/api/auth/[...nextauth].ts": {
      "maxDuration": 10
    },
    "admin_console/pages/api/export/[module].ts": {
      "maxDuration": 60,
      "memory": 3008
    }
  },
  
  "regions": ["iad1", "sfo1"],
  
  "github": {
    "silent": false,
    "autoAlias": true
  }
}